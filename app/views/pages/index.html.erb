<h1>Listing pages</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Tagline</th>
    <th>Description</th>
    <th>Main image</th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.name %></td>
    <td><%= page.tagline %></td>
    <td><%= page.description %></td>
    <td><%= page.main_image %></td>
    <td>
      <%= link_to 'Show', page %>
      <% if page.allows_editor?(current_user) %>
        | <%= link_to 'Edit', edit_page_path(page) %>
        | <%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
  </td>
  </tr>
<% end %>
</table>

<br />

