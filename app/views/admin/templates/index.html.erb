<h1>Listing templates</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Class name</th>
    <th>Description</th>
    <th>Created by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @templates.each do |template| %>
  <tr>
    <td><%= template.name %></td>
    <td><%= template.class_name %></td>
    <td><%= template.description %></td>
    <td><%= template.created_by_id %></td>
    <td><%= link_to 'Show', [:admin, template] %></td>
    <td><%= link_to 'Edit', edit_admin_template_path(template) %></td>
    <td><%= link_to 'Destroy', [:admin, template], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

